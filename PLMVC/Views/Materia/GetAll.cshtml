@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LISTA GENERAL DE MATERIAS</h2>
<br />

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>EDITAR</th>
            <th>ID MATERIA</th>
            <th>MATERIA</th>
            <th>COSTO</th>
            <th>ELIMINAR</th>
        </tr>
        </thead>
        <tbody>
            @foreach(ML.Materia registro in Model.Materias)
            {
                <tr>
                    <td> <a href="@Url.Action("Form","Materia", new {idMateria = registro.IdMateria})" class="btn btn-warning">EDITAR</a> </td>
                    <td>@registro.IdMateria</td>
                    <td>@registro.Nombre</td>
                    <td>@registro.Costo</td>
                    <td> <a href="@Url.Action("Delete", "Materia", new {idMateria = registro.IdMateria})" onclick="return confirm('¿SEGURO QUE DESEAS ELIMINAR EL REGISTRO?');" class="btn btn-danger">ELIMINAR</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<hr />
<a href="@Url.Action("Form","Materia")" class="btn btn-outline-success">AGREGAR NUEVA MATERIA</a>

