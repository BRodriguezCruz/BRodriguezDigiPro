@model ML.AlumnoMateria
@{
    ViewBag.Title = "GetMateriasAsignadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get Materias Asignadas</h2>
<br />

<div class="row">
    <div class="col-md-2">
        @Html.TextBoxFor(model => model.Alumno.IdAlumno, new { @class = "form-control", disabled = "true" })
    </div>
    <div class="col-md-2">
        @Html.TextBoxFor(model => model.Alumno.Nombre, new { @class = "form-control", disabled = "true" })
    </div>
    <div class="col-md-2">
        @Html.TextBoxFor(model => model.Alumno.ApellidoPaterno, new { @class = "form-control", disabled = "true" })
    </div>
    <div class="col-md-2">
        <a href="@Url.Action("GetMateriasNoAsignadas","AlumnoMateria")" class="btn btn-success">ASIGNAR MATERIAS</a>
    </div>
</div>
<br />
@if (Model.Materia.Materias.Count != 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>MATERIA ASIGNADA</th>
                    <th>NOMBRE MATERIA</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.AlumnoMateria registro in Model.Materia.Materias)
                {
                    <tr>
                        <td> <a href="@Url.Action("Delete","AlumnoMateria", new {idAlumno = registro.Alumno.IdAlumno, idMateria = registro.Materia.IdMateria})" class="btn btn-danger"><i class="bi bi-archive-fill"></i> Eliminar</a></td>
                        <td>@registro.Materia.IdMateria</td>
                        <td>@registro.Materia.Nombre</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        NO HAY MATERIAS ASIGNADAS A ESTE ALUMNO
    </div>
}
<br />  
<div class="row w-100 align-items-left">
    <div class="col text-left">
        <a href="@Url.Action("GetAllAlumnos","AlumnoMateria")" class="btn btn-outline-warning"> VOLVER</a>
    </div>
</div>

